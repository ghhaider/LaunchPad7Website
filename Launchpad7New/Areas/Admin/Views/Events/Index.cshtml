@model IEnumerable<Launchpad7New.Areas.Admin.Models.Event>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>LaunchPad7 Events</h2>
            <p>
              
                @Html.ActionLink("Create New Event", "Create")
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-responsive table-striped admineventsTable">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>

                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Time)
                        </th>
                        <th scope="col" >
                            @Html.DisplayNameFor(model => model.Location)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th scope="col" >
                            Actions
                        </th>

                    </tr>
                </thead>
                

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                     
                        <a href="@Url.Action("Details", "Events", new {id= @item.Id })">@item.Name</a>

                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                   
                  
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
                }

            </table>
        </div>

    </div>

</div>

