<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Launchpad7 - Talent - Ideas - Innovations - Entrepreneurship</title>
    <meta name="keywords" content="LaunchPad, Startups, Talent, Ideas, Innovations, Entrepreneurship" />
    <meta name="description" content="Launchpad is the initiative in pursuit of supporting young talent with innovative ideas, early-stage social enterprises by connecting them to resources, providing mentorship and exposing them to new & untapped markets." />

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/Theme.css" rel="stylesheet" />
    @*@Styles.Render("~/Content/css")*@
    <style>
        .navigation-image{
            position:initial;
        }
    </style>
</head>
<body>
    <div class="navigation-image">
        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="~/">Launchpad7</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navi navbar-nav">
                        <li>@Html.ActionLink("Users", "Index", "User", new { area = "Admin" }, new { })</li>
                        <li>@Html.ActionLink("Event List", "Index", "Events", new { area = "Admin" }, new { })</li>
                        <li>@Html.ActionLink("Invoice List", "Index", "Invoices", new { area = "Admin" }, new { })</li>
                        <li>@Html.ActionLink("Package List", "Index", "Packages", new { area = "Admin" }, new { })</li>
                        @*@Html.Partial("_LoginPartial")*@
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @section Scripts {


    <script type="text/javascript">
            $('.datepicker').datepicker(); //Initialise any date pickers
    </script>
    }
</body>
</html>
